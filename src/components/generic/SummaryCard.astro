---
import { Card } from "@eliancodes/brutal-ui";

interface Props {
  title: string;
  imgSrc: string;
  imgAlt: string;
  description: string;
}

const { title, imgAlt, imgSrc, description } = Astro.props;

// Convert relative path to absolute path for browser
const cleanPath = imgSrc.replace(/^\.\.\/\.\.\/\.\.\/\.\.\/assets\/img\//, '/img/');
---

<style>
  .title-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.3;
    max-height: calc(1.3em * 3);
  }
</style>

<Card color="white" data-brutal-card>
  <h3 class="poppins text-lg md:text-xl title-clamp">{title}</h3>
  <div class="rounded-lg border-3 border-black my-4 h-56">
    <img
      src={cleanPath}
      alt={imgAlt}
      class="rounded h-full w-full object-cover"
    />
  </div>
  <p class="poppins">{description}</p>
  <slot />
</Card>
